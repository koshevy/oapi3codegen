{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "noEmitOnError": false,
        "outDir": "./dist",
        "target": "es5",
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "sourceMap": false
    },
    "exclude": [
        "oapi3codegen/node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "core/*",
        "adapters/typescript/*",
        "adapters/typescript/descriptors/*",
        "oapi-defs/*",
        "oapi-defs/common/*",
        "oapi-defs/components/*",
      "packages/*"
    ],
    "lib": [
        "es2017",
        "dom"
    ],
    "maxNodeModuleJsDepth": 2,
    "files": [
        "./index.ts",
        "./cli.ts"
    ]
}
